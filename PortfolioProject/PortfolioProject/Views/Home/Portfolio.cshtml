@{
    ViewData["Title"] = "Portfolio";
}
<h1>@ViewData["Title"]</h1>

<div class="container-fluid">
    <div id="carouselIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carouselIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselIndicators" data-slide-to="1"></li>
            <li data-target="#carouselIndicators" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="d-block w-100" src="~/Images/Background.JPG" alt="First slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="~/Images/gift card idea 1 (beat saber NO TEXT).png" alt="Second slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="~/Images/oldweb - Copy.png" alt="Third slide">
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>

    <hr />



</div>

<div class="container">
    <h2 class="text-center">Recent Works</h2>
    <div class="row" id="projectRow">
        <a href="~/Images/oldweb - Copy.png" data-toggle="lightbox" data-gallery="gallery" class="col-md-4">
            <img src="~/Images/oldweb - Copy.png" class="img-fluid rounded">
        </a>
        <a href="~/Images/gift card idea 1 (beat saber NO TEXT).png" data-toggle="lightbox" data-gallery="gallery" class="col-md-4">
            <img src="~/Images/gift card idea 1 (beat saber NO TEXT).png" class="img-fluid rounded">
        </a>
        <a href="~/Images/advenger.JPG" data-toggle="lightbox" data-gallery="gallery" class="col-md-4">
            <img src="~/Images/advenger.JPG" class="img-fluid rounded">
        </a>
    </div>
    <div class="row" id="projectRow">
        <a href="~/Images/Curtin.jpg" data-toggle="lightbox" data-gallery="gallery" class="col-md-4">
            <img src="~/Images/Curtin.jpg" class="img-fluid rounded">
        </a>
        <a href="~/Images/MIP.jpg" data-toggle="lightbox" data-gallery="gallery" class="col-md-4">
            <img src="~/Images/MIP.jpg" class="img-fluid rounded">
        </a>
        <a href="~/Images/Adam.png.jpg" data-toggle="lightbox" data-gallery="gallery" class="col-md-4">
            <img src="~/Images/Adam.png.jpg" class="img-fluid rounded">
        </a>
    </div>
</div>
